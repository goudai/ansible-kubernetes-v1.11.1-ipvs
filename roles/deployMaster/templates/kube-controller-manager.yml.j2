apiVersion: v1
kind: Pod
metadata:
  annotations:
    scheduler.alpha.kubernetes.io/critical-pod: ""
  labels:
    component: kube-controller-manager
    tier: control-plane
  name: kube-controller-manager
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: kube-controller-manager
# gcr.io/google_containers
    image: registry.cn-hangzhou.aliyuncs.com/google_containers/kube-controller-manager-amd64:v1.11.1
    command:
      - kube-controller-manager
      - --v=0
      - --logtostderr=true
      - --address=127.0.0.1
      - --root-ca-file={{ kubernetes_pki }}/{{ ca }}.pem
      - --cluster-signing-cert-file={{ kubernetes_pki }}/{{ ca }}.pem
      - --cluster-signing-key-file={{ kubernetes_pki }}/{{ ca }}-key.pem
      - --service-account-private-key-file={{ kubernetes_pki }}/sa.key
      - --kubeconfig={{ kubernetes_path }}/controller-manager.conf
      - --leader-elect=true
      - --use-service-account-credentials=true
      - --node-monitor-grace-period=40s
      - --node-monitor-period=5s
      - --pod-eviction-timeout=2m0s
      - --controllers=*,bootstrapsigner,tokencleaner
      - --allocate-node-cidrs=true
      - --cluster-cidr={{ ClusterCidr }}
      - --node-cidr-mask-size=24
    livenessProbe:
      failureThreshold: 8
      httpGet:
        host: 127.0.0.1
        path: /healthz
        port: 10252
        scheme: HTTP
      initialDelaySeconds: 15
      timeoutSeconds: 15
    resources:
      requests:
        cpu: 200m
    volumeMounts:
    - mountPath: {{ kubernetes_pki }}
      name: k8s-certs
      readOnly: true
    - mountPath: {{ ca_certs_path }}
      name: ca-certs
      readOnly: true
    - mountPath: {{ kubernetes_path }}/controller-manager.conf
      name: kubeconfig
      readOnly: true
    - mountPath: /usr/libexec/kubernetes/kubelet-plugins/volume/exec
      name: flexvolume-dir
  volumes:
  - hostPath:
      path: {{ kubernetes_pki }}
      type: DirectoryOrCreate
    name: k8s-certs
  - hostPath:
      path: {{ ca_certs_path }}
      type: DirectoryOrCreate
    name: ca-certs
  - hostPath:
      path: {{ kubernetes_path }}/controller-manager.conf
      type: FileOrCreate
    name: kubeconfig
  - hostPath:
      path: /usr/libexec/kubernetes/kubelet-plugins/volume/exec
      type: DirectoryOrCreate
    name: flexvolume-dir
